{
    "manifest_version": 2,
    "name": "Pikabu+",   
    "version": "0.9.5",
	"web_accessible_resources":["*.png","*.jpg","*.css"],
    "icons": {
        "16": "./icon.png",
        "32": "./icon.png",
        "48": "./icon.png",
        "128": "./icon.png"
    },

    "permissions": [
        "tabs",
		"storage",
        "http://*/*",		
        "https://*/*"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts":[{
        "matches": [
            "http://pikabu.ru/*",
            "https://pikabu.ru/*"
        ],
        "js": [
            "pikabu.js",
            "jquery-3.3.1.min.js",
            "jquery-ui.min.js"

        ]


    }],

    "browser_action": {
        "default_title": "Pikabu+",
        "default_icon" : "./icon.png",
        "default_popup": "popup.html"    
    }
	
}